{
    "name": "Imbalance_CIFAR100_LT_RIDE",
    "n_gpu": 1,

    "arch": {
        "type": "ResNet32EAModel",
        "args": {
            "num_classes": 100,
            "reduce_dimension": true,
            "num_experts": 3,
            "top_choices_num": 30,
            "use_norm": true,
            "pos_weight": 100
        }
    },
    "data_loader": {
        "type": "ImbalanceCIFAR100DataLoader",
        "args":{
            "data_dir": "data",
            "batch_size": 512,
            "shuffle": true,
            "num_workers": 2,
            "balanced": true
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "weight_decay": 5e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "loss": {
        "type": "CrossEntropyLoss"
    },
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 5,
            "eta_min": 0.0
        }
    },
    "resume_state_dict_only": true,
    "trainer": {
        "epochs": 5,

        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}
